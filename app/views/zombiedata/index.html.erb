<p id="notice"><%= notice %></p>

<h1>Zombiedata</h1>

<table>
  <thead>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Age</th>
    <th>Weight</th>
    <th>Status</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
    <% @zombiedata.each do |zombiedatum| %>
      <tr>
        <td><%= zombiedatum.id %></td>
        <td><%= zombiedatum.name %></td>
        <td><%= zombiedatum.age %></td>
        <td><%= zombiedatum.weight %></td>
        <td><%= zombiedatum.status %></td>
        <td><%= link_to 'Show', zombiedatum %></td>
        <td><%= link_to 'Edit', edit_zombiedatum_path(zombiedatum) %></td>
        <td><%= link_to 'Destroy', zombiedatum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
  <%= form_tag("search", method: "get") do %>
      <%= label_tag(:q, "Search by ID:") %>
      <%= text_field_tag(:q) %>
      <%= submit_tag("Search") %>
  <% end %>
</div>


<% if !@search_result.blank? %>

  <h3>Data Found </h3>

  <table>
    <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Age</th>
      <th>Weight</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @search_result.id %></td>
        <td><%= @search_result.name %></td>
        <td><%= @search_result.age %></td>
        <td><%= @search_result.weight %></td>
        <td><%= @search_result.status %></td>
        <td><%= link_to 'Show', @search_result %></td>
        <td><%= link_to 'Edit', edit_zombiedatum_path(@search_result) %></td>
        <td><%= link_to 'Destroy', @search_result, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    </tbody>
  </table>

<% end %>

<br>

