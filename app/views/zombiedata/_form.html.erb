<%= form_for(zombiedatum) do |f| %>
    <% if zombiedatum.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(zombiedatum.errors.count, "error") %> prohibited this zombie from being saved:</h2>
          <ul>
            <% zombiedatum.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :age %>
      <%= f.number_field :age %>
    </div>

    <div class="field">
      <%= f.label :weight %>
      <%= f.number_field :weight %>
    </div>
    <% if params[:action]=="edit" %>
      <div class="field">
        <%= f.label :status %>
        <%= text_field :zombiedatum,:status, disabled: true %>
      </div>
    <%end %>

    <div class="field">
      <%= f.label :status,"Status change to: " %>
      <%= f.select(:status,params[:action]=="new"?['Inactive']:Zombiedatum::STATUS, {:include_blank => false} ) %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>

<% end %>
