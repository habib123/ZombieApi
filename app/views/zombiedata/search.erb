<p id="notice"><%= notice %></p>

<h1>Zombiedata</h1>

<div>
  <%= form_tag("search", method: "get") do %>
      <%= label_tag(:q, "Search by ID :") %>
      <%= text_field_tag(:q) %>
      <%= submit_tag("Search") %>
  <% end %>
</div>


<% if !@search_result.blank? %>

  <h3>Data Found </h3>

  <table>
    <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Age</th>
        <th>Weight</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @search_result['id'] %></td>
        <td><%= @search_result['name'] %></td>
        <td><%= @search_result['age'] %></td>
        <td><%= @search_result['weight'] %></td>
        <td><%= @search_result['status'] %></td>
      </tr>
    </tbody>
  </table>
<% end %>

<br>
<%= link_to 'Back', zombiedata_path %>

<%= link_to 'New Zombiedatum', new_zombiedatum_path %>
